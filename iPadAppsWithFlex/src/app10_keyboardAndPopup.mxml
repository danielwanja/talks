<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" applicationDPI="160">
	<fx:Script>
		<![CDATA[
			import views.v10.InputCallout;
			protected function calloutButton_clickHandler(event:MouseEvent):void
			{
				var callout:InputCallout = new InputCallout();
				callout.open(calloutButton, true);				
			}
		]]>
	</fx:Script>
	
	<s:Button id="calloutButton" horizontalCenter="0" bottom="30" 
			  label="Show Input Fields"
			  click="calloutButton_clickHandler(event)" />

</s:Application>
